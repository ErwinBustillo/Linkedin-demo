<div class="container">

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-body">
          <ul class="nav nav-tabs final-login">
              <li>
                <%= link_to "Sign In", new_persona_session_path %>
              </li>
              <li class="active"><a href="#sectionB">Join us!</a></li>
          </ul>
          <div>
            <div class="">
                <%= devise_error_messages! %>
        	      <div class="innter-form">
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "sa-innate-form"}) do |f| %>
                    <label>Nombre</label>
                    <%= f.text_field :nombre, autofocus: true %>
                    <label>Apellido</label>
                    <%= f.text_field :apellido %>
                    <label>Carrera</label>
                    <%= f.select(:carrera_id, options_from_collection_for_select(Carrera.all, "id", "nombre")) %>
                    <label>Semestre</label>
                    <%= f.text_field :semestre %>
                    <label>Email</label>
                    <%= f.email_field :email %>
                    <label>Telefono</label>
                    <%= f.text_field :telefono %>
                    <label>Password</label>
                    <%= f.password_field :password, autocomplete: "off" %>
                    <label>Password Confirmation</label>
                    <%= f.password_field :password_confirmation, autocomplete: "off" %>
                    <%= f.submit "Join Now" %>
                    <p>By clicking Join now, you agree to hifriends's User Agreement, Privacy Policy, and Cookie Policy.</p>
                  <% end %>
                </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
